{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": [
    "* * 1 * *"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "lockFileMaintenance"
      ],
      "schedule": ["* 0-3 1 * *"],
      "automerge": true,
      "groupName": "dependency patches"
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "dependency feature release updates"
    }
  ]
}
